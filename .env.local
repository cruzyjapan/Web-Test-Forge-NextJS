# ===================================
# Environment Configuration Template
# ===================================
# Copy this file to .env and update the values

# Database
# For SQLite (development)
DATABASE_URL="file:./dev.db"
# For PostgreSQL (production)
# DATABASE_URL="postgresql://user:password@localhost:5432/webtestforge"

# Authentication
# IMPORTANT: Change this in production to a secure random string
# Generate with: openssl rand -base64 32
AUTH_SECRET="change-this-to-a-secure-random-string-min-32-chars"
NEXTAUTH_SECRET="change-this-to-a-secure-random-string-min-32-chars"
SESSION_SECRET="change-this-to-a-secure-random-string-min-32-chars"

# Redis (optional - for job queue)
# Uncomment and configure if you want to use Redis for background jobs
# REDIS_URL="redis://localhost:6379"

# MCP Server
# Path to the MCP server executable
MCP_SERVER_PATH="./mcp-server/dist/index.js"

# Debug Mode
# Set to true to enable debug logging
DEBUG=false

# Feature Flags
# Disable auth alerts until Redis is configured
NEXT_PUBLIC_ENABLE_AUTH_ALERTS=false

# Playwright Configuration (optional)
# PLAYWRIGHT_BROWSERS_PATH=0
# PLAYWRIGHT_SKIP_VALIDATE_HOST_REQUIREMENTS=1