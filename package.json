{
  "name": "web-test-forge",
  "version": "1.0.0",
  "description": "Automated testing tool for Next.js applications with Playwright integration",
  "author": "Cruzy Japan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cruzyjapan/Web-Test-Forge-NextJS.git"
  },
  "private": false,
  "scripts": {
    "dev": "next dev",
    "dev:turbo": "next dev --turbopack",
    "build": "next build",
    "build:prod": "NODE_ENV=production next build",
    "start": "next start",
    "start:prod": "NODE_ENV=production next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "db:setup": "tsx scripts/db-setup.ts",
    "db:setup:dev": "tsx scripts/db-setup.ts development",
    "db:setup:prod": "tsx scripts/db-setup.ts production",
    "db:setup:test": "tsx scripts/db-setup.ts test",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "setup:dev": "npm run db:setup:dev && npm run db:generate",
    "setup:prod": "npm run db:setup:prod && npm run build:prod",
    "setup:test": "npm run db:setup:test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@prisma/client": "^6.13.0",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tanstack/react-query": "^5.84.1",
    "@tanstack/react-query-devtools": "^5.84.1",
    "@types/bcryptjs": "^3.0.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.56.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^14.0.0",
    "date-fns": "^4.1.0",
    "glob": "^11.0.3",
    "ioredis": "^5.7.0",
    "lucide-react": "^0.536.0",
    "next": "15.4.5",
    "next-intl": "^4.3.4",
    "node-fetch": "^2.7.0",
    "playwright": "^1.54.2",
    "prisma": "^6.13.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.9",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "openai": "^5.11.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
